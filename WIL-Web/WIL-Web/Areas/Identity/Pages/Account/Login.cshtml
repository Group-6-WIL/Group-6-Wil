@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<h1 class="header">
    <img src="~/images/ladybird-banner.png" class="centered-image" alt="Company Logo">
</h1>


<body style="background-color: #f8f9fa; position: relative; padding: 50px;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h2 class="text-center">@ViewData["Title"]</h2>
                    </div>
                    <div>
                      
                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <div class="form-group">
                                <h4>Email</h4>
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="">
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <h4>Passkey</h4>
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="">
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group text-center">
                                <button id="login-submit" type="submit" class="btn btn-primary btn-block">Log in</button>
                            </div>
                        </form>
                        <div class="text-center">
                            <small class="text-muted">Not an admin?</small><br>
                            <!-- Back button -->
                                <a href="@Url.Action("Register", "Account")" class="text-info">Click here to register</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
