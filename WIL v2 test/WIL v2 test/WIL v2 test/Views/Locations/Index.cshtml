@model IEnumerable<WIL_v2_test.Models.Location>

@{
    ViewData["Title"] = "Locations";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Ladybird Foundation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WIL_V1.styles.css" asp-append-version="true" />
    <style>
        .location-page {
            display: flex;
            flex-direction: column;
            align-items: center;
            background-color: #f0f0f0;
            padding: 20px;
        }

        .location-header {
            background-color: #d9534f;
            color: white;
            padding: 20px;
            width: 100%;
            text-align: center;
            font-size: 2.5em; /* Increased font size */
            margin-bottom: 20px;
            position: relative;
            height: 150px;
        }

        .circle {
            position: absolute;
            background: black;
            border-radius: 50%;
            z-index: 0;
        }

        .circle1 {
            width: 80px;
            height: 80px;
            top: 10px;
            left: 10px;
        }

        .circle2 {
            width: 100px;
            height: 100px;
            bottom: 10px;
            right: 10px;
        }

        .circle3 {
            width: 60px;
            height: 60px;
            top: 30px;
            right: 30%;
        }

        .circle4 {
            width: 120px;
            height: 120px;
            bottom: 30px;
            left: 25%;
        }

        .location-map {
            width: 100%;
            max-width: 600px;
            margin-bottom: 20px;
        }

        .location-table {
            width: 100%;
            max-width: 800px;
            margin-bottom: 20px;
        }

        .header-text {
            position: relative;
            z-index: 1;
        }
    </style>
</head>
<body>
    <div class="location-page">
        <div class="location-header">
            <h1 class="header-text">@ViewData["Title"]</h1>
            <div class="circle circle1"></div>
            <div class="circle circle2"></div>
            <div class="circle circle3"></div>
            <div class="circle circle4"></div>
        </div>

        <div class="location-map">
            <h3>Donation Sites</h3>
            <p>City Hill, Hillcrest</p>
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3456.508087588033!2d30.746048415085235!3d-29.775327481976897!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1ef7aa2c79f7d0a3%3A0x8d531769709924b1!2sCity%20Hill%20Church!5e0!3m2!1sen!2sza!4v1628862274632!5m2!1sen!2sza"
                    width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>

        <div class="location-table">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Address</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Address</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Include jQuery, Popper.js, and Bootstrap's JavaScript libraries -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.10.2/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Ensure dropdown is properly initialized -->
    <script>
        $(document).ready(function () {
            $('.dropdown-toggle').dropdown();
        });
    </script>
</body>
</html>
