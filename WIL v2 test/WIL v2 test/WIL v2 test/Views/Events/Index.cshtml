@model List<WIL_v2_test.Models.Events>

<h1 class="text-center">Events</h1>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <img src="@(Url.Content("~/events/" + item.ImagePath) ?? Url.Content("~/images/default.png"))" class="card-img-top" alt="@item.Name" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text">
                            <small class="text-muted">Date: @item.Date.ToString("d MMM yyyy")</small>
                        </p>
                        <a href="@Url.Action("EventDetails", "Dashboard", new { id = item.Id })" class="btn btn-primary">More Info</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

