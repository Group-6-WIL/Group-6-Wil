@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html>
<head>
    <title>Log in</title>
    <style>
        body {
            background-color: #f8f9fa;
            position: relative;
            color: white; /* Default text color */
        }
    </style>
    <script src="~/js/dynamictextcolor.js"></script>  <!-- Link to the JavaScript file -->
</head>
<body>
    <h1 class="header">
        <img src="~/images/ladybird-banner.png" class="centered-image" alt="Company Logo">
    </h1>
    
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="">
                    <div class="">
                        <h2 class="text-center">@ViewData["Title"]</h2>
                    </div>
                    <div>

                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <div class="form-group">
                                <h4>Email</h4>
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" font-family="Georgia" aria-required="true" placeholder="">
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <h4>Password</h4>
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" font-family="Georgia" aria-required="true" placeholder="">
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group text-center">
                                <button id="login-submit" type="submit" font-family="Georgia" class="login-button">Login</button>
                            </div>
                        </form>
                        <div class="text-center">
                            <small class="text-muted">Not an admin?</small><br>

                            <a href="/Identity/Account/Register" class="text-info">Click here to register</a>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
