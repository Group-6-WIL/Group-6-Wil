@page
@model RegisterModel
@{
    ViewData["Title"] = "Sign Up";
}

<head>
    <title>Sign Up</title>
    <style>
        body {
            background-color: #f4f7fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .centered-image {
            width: 40%;
            height: auto;
            display: block;
            margin: 0 auto 20px;
        }

        .container {
            max-width: 900px;
            padding: 20px;
        }

        .card {
            border: 2px solid #dc3545; /* Red border around the card */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }

        .card-body {
            padding: 30px;
        }

        .form-control {
            border-radius: 5px;
            border: 1px solid #ced4da;
            transition: border-color 0.3s, box-shadow 0.3s;
        }

            .form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
            }

        .form-group label {
            font-weight: 600;
            color: #495057;
            font-size: 14px;
        }

        .register-button {
            background-color: #dc3545; /* Red background for the button */
            color: white;
            border: none;
            padding: 12px 24px;
            font-size: 16px;
            font-weight: 600;
            border-radius: 5px;
            transition: background-color 0.3s, transform 0.3s;
        }

            .register-button:hover {
                background-color: #b21f2d; /* Darker red on hover */
                transform: translateY(-2px);
            }

        .text-muted {
            font-size: 12px;
        }

        .custom-select {
            position: relative;
        }

            .custom-select::after {
                content: '▼';
                position: absolute;
                top: 50%;
                right: 12px;
                transform: translateY(-50%);
                pointer-events: none;
                color: #6c757d;
            }

            .custom-select select {
                appearance: none;
                padding-right: 30px;
            }

        .form-group.text-center {
            margin-top: 20px;
        }

        .header {
            text-align: center;
        }

        h2 {
            font-size: 24px;
            font-weight: 700;
            color: #343a40;
        }

        /* Modal Styles */
        .modal {
            display: none; /* Hidden by default */
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.4); /* Black background with opacity */
        }

        .modal-content {
            background-color: #fefefe;
            margin: 15% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 30%;
            border-radius: 10px;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
        }

            .close:hover,
            .close:focus {
                color: black;
                text-decoration: none;
            }

        #adminPassword {
            margin-top: 15px;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1 class="header">
            <img src="~/images/ladybird-banner.png" class="centered-image" alt="Company Logo">
        </h1>
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card">
                    <div class="card-body">
                        <h2 class="text-center">@ViewData["Title"]</h2>
                        <form method="post">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Input.FirstName">First Name</label>
                                        <input asp-for="Input.FirstName" class="form-control" />
                                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.Surname">Last Name</label>
                                        <input asp-for="Input.Surname" class="form-control" />
                                        <span asp-validation-for="Input.Surname" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.Email">Email</label>
                                        <input asp-for="Input.Email" class="form-control" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Input.Password">Password</label>
                                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" />
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label for="role">Role</label>
                                        <div class="custom-select">
                                            <select id="role" name="Input.Role" class="form-control">
                                                <option value="User">User</option>
                                                <option value="Admin">Admin</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group text-center col-12">
                                    <button id="registerSubmit" type="submit" class="register-button">Register</button>
                                </div>
                            </div>
                        </form>
                        <div class="text-center mt-3">
                            <small class="text-muted">Already Registered?</small><br>
                            <a href="/Identity/Account/Login" class="text-info">Click here to login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal for Admin Password -->
    <div id="adminPasswordModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Enter Admin Password</h2>
            <input type="password" id="adminPassword" class="form-control" placeholder="Enter Admin Password" />
            <button id="submitPassword" class="register-button mt-3">Submit</button>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />

        <script>
            document.getElementById("role").addEventListener("change", function () {
                const role = this.value;
                const modal = document.getElementById("adminPasswordModal");

                if (role === "Admin") {
                    modal.style.display = "block"; // Show the modal
                } else {
                    modal.style.display = "none"; // Hide the modal if not Admin
                }
            });

            // Get the modal
            const modal = document.getElementById("adminPasswordModal");

            // Get the <span> element that closes the modal
            const span = document.getElementsByClassName("close")[0];

            // When the user clicks on <span> (x), close the modal
            span.onclick = function () {
                modal.style.display = "none";
                document.getElementById("role").value = "User"; // Reset to 'User' if modal is closed
            }

            // When the user clicks anywhere outside of the modal, close it
            window.onclick = function (event) {
                if (event.target == modal) {
                    modal.style.display = "none";
                    document.getElementById("role").value = "User"; // Reset to 'User' if modal is closed
                }
            }

            // Handle Submit button click for Admin Password
            document.getElementById("submitPassword").addEventListener("click", function () {
                const password = document.getElementById("adminPassword").value;
                const adminPassword = "TheLadyB1rdF0undation"; // Hardcoded admin password

                if (password === adminPassword) {
                    alert("Admin access granted!");
                    modal.style.display = "none";
                } else {
                    alert("Incorrect password. Please try again.");
                    document.getElementById("role").value = "User"; // Reset to 'User' if password is incorrect
                    modal.style.display = "none";
                }
            });
        </script>
    }
</body>
